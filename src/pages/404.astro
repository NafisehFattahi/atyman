---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import error from "../images/404.png";
import { SITE_TITLE, SITE_DESCRIPTION} from '../constants';

---
<style>
  .unselectable {
  			user-select: none;
			}
  .p404{
    height: 100vh;
  }
</style>



<MainLayout title="404 - صفحه موردنظر پیدا نشد" description={SITE_DESCRIPTION}>
  <div class="p404 unselectable flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-5xl">صفحه مورد نظر پیدا نشد
    </h1>
    <p class="text-2xl mb-10">
      صفحه مورد نظر شما پیدا نشد
      لطفا صفحه دیگری را جستجو نمایید
    </p>

    <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">بازگشت به صفحه اصلی</a>
  </div>
</MainLayout>

