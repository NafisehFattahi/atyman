---
import Hero from "../components/hero.astro";
import Tags from "../components/tags.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION} from '../constants';

import { getCollection } from 'astro:content';
import type { CollectionEntry } from "astro:content";

const productBlue: CollectionEntry<'productsBlue'>[] = (await getCollection('productsBlue'));
const productBlue1: CollectionEntry<'productsBlue1'>[] = (await getCollection('productsBlue1'));

const productGreen: CollectionEntry<'productsGreen'>[] = (await getCollection('productsGreen'));
const productGreen1: CollectionEntry<'productsGreen1'>[] = (await getCollection('productsGreen1'));

const productOrange: CollectionEntry<'productsOrange'>[] = (await getCollection('productsOrange'));
const productOrange1: CollectionEntry<'productsOrange1'>[] = (await getCollection('productsOrange1'));
---
<style>

	h1 {
		font-size:40px;
		font-weight: 500;
		color: rgb(0, 0, 0);  
		padding-top: 25px;
		margin-top: 15px;
		padding-bottom: 15px;
		margin-bottom: 15px;
		text-align: center;
		text-shadow: 1px 5px 18px #0077ff;
	}
	
		:root {
			/*========== Colors ==========*/
			/*Color mode HSL(hue, saturation, lightness)*/
			--white-color: #fff;
			--black-color: hsl(210, 12%, 15%);
			--body-color: hsl(210, 16%, 12%);
			--container-color: hsl(210, 24%, 8%);
			/*========== Font and typography ==========*/
			/*.5rem = 8px | 1rem = 16px ...*/
			--body-font: "Poppins", sans-serif;
			--h2-font-size: 1.25rem;
			--normal-font-size: .938rem;
		}
		@media screen and (min-width: 1024px) {
			:root {
				--h2-font-size: 1.5rem;
				--normal-font-size: 1rem;
			}
		}
	
		a {
		text-decoration: none;
		}
	
		.unselectable {
			user-select: none;
		}
		.box, .inner {
			/* border: 2px solid red; */
		}
		.box {
			width: 75%;
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 0 auto;
		}
	
	
		.container {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			margin: 0 auto;
			/* border: 2px solid red; */
			place-items: center;
			margin-inline: 1.5rem;
	
		}
		.card__container, .card__article {
		 display: grid;
		 gap: 2rem;
		 /* border: 2px solid red; */
		}
		.card__container {
			padding-block: 0px 4.5rem;
		}
		.card__article {
			--hue-1: 210;
			--hue-2: 238;
			position: relative;
			justify-items: center;
			justify-content: center;
			align-items: center;
			color: var(--white-color);
			text-align: center;
			padding: 4rem 2rem 3rem;
			border: 4px solid transparent;
			background: linear-gradient(var(--container-color), var(--container-color)) padding-box, linear-gradient(135deg, hsl(var(--hue-1), 85%, 70%) 0%, var(--container-color), var(--container-color), hsl(var(--hue-2), 70%, 55%) 100%) border-box;
			border-radius: 1.25rem;
			overflow: hidden;
		}
		.card__shape-1 img{
			position: relative;
			width: 148px;
			height: 148px;
			background: linear-gradient(140deg, hsl(var(--hue-1), 75%, 25%) 3%, hsl(var(--hue-2), 65%, 45%) 100%);
			border-radius: 2rem;
			z-index: 2;
		}
		/* .card__shape-2 {
			width: 116px;
			height: 116px;
			background: linear-gradient(140deg, hsl(var(--hue-1), 70%, 50%) 3%, hsl(var(--hue-2), 95%, 45%) 100%);
			border-radius: 1.5rem;
		}
		.card__shape-3 {
			width: 76px;
			height: 76px;
			background: linear-gradient(140deg, hsl(var(--hue-1), 85%, 60%) 3%, hsl(var(--hue-2), 85%, 60%) 100%);
			border-radius: 1rem;
			display: grid;
			place-items: center;
		} */
		.card__shape-2, .card__shape-3 {
			position: absolute;
			inset: 0;
			margin: auto;
		}
		.card__icon {
			font-size: 3rem;
		}
		.card__data {
			z-index: 3;
		}
		.card__title {
			font-size: var(--h2-font-size);
			margin-bottom: 0.25rem;
			font-weight: 600;
		}
		.card__description {
			margin-bottom: 1.5rem;
		}
		.card__button {
			display: inline-block;
			font-weight: 500;
			background-color: var(--white-color);
			padding: 1rem 1.5rem;
			color: var(--black-color);
			background-color: var(--white-color);
		}
		/* .card--button:hover {
			color: black;
			background-color: indigo;
		} */
		.card__orange {
			--hue-1: 300;
			--hue-2: 30;
		}
		.card__green {
			--hue-1: 180;
			--hue-2: 50;
		}
		.card__scale-1 {
			width: 148px;
			height: 148px;
			background: linear-gradient(140deg, hsl(var(--hue-1), 70%, 50%) 3%, hsl(var(--hue-2), 95%, 45%) 100%);
			border-radius: 2rem;
			top: 4rem;
		}
		.card__scale-2 {
			width: 116px;
			height: 116px;
			background: var(--container-color);
			border-radius: 1.5rem;
			top: 5rem;
		}
		.card__scale-1, .card__scale-2 {
			position: absolute;
			filter: blur(24px);
			transition: transform 0.3s ease-in;
		}
		.card__article:hover .card__scale-1 {
			transform: scale(6);
		}
		.card__article:hover .card__scale-2 {
			transform: scale(6);
			transition-delay: 0.1s;
		}
	
		/*=============== BREAKPOINTS ===============*/
		/* For small devices */
		@media screen and (max-width: 320px) {
			.container {
				margin-inline: 1rem;
			}
			.card__article {
				padding: 2rem 1rem;
			}
			.card__scale-1 {
				top: 2rem;
			}
			.card__scale-2 {
				top: 3rem;
			}
		}
	
		@media screen and (min-width: 300px) {
			.card__container {
				grid-template-columns: 1fr;
			}
			.box{
				width: 85%;
			}
		}
		@media screen and (min-width: 750px) {
			.card__container {
				grid-template-columns: 1fr;
			}
			.box{
				width: 70%;
			}
			
		}
		@media screen and (min-width: 950px) {
			.box{
				width: 80%;
			}
			.card__container {
				grid-template-columns: repeat(2, 1fr);
			}
		} 
		 @media screen and (min-width: 1500px) {
			.container {
				height: 100vh;
			}
			.box{
				width: 75%;
			}
			.card__container {
				grid-template-columns: repeat(3, 1fr);
				margin: 4.5rem 2rem 3.5rem;
			}
			.card__article {
				padding: 4.5rem 2rem 3.5rem;
			}
			h1 {
			font-size:50px;
			font-weight: 500;
			color: rgb(0, 0, 0);  
			padding-top: 20px;
			margin-top: 20px;
			text-align: center;
			text-shadow: 1px 5px 18px #0077ff;
		}
		} 
	</style>






  <MainLayout title="آتی من" description={SITE_DESCRIPTION}>
      
		<Hero />
		<div class="productName unselectable"><h1>ماشین‌آلات و خدمات<h1/></div>
		<div class="box">
			<div class="card__container">
				{productGreen.map(product => (
					<article class="card__article card__green">
						<div class="card__scale-1"></div>
						<div class="card__scale-2"></div>

						<div class="card__shape-1 unselectable">
							<img
          			src={product.data.thumbnail}
          			alt="thumbnail Image"
          			data-index="1"
        			/>
						</div>

						<div class="card__data unselectable">
							 <h2 class="card__title mb-2">{product.data.title}</h2>

								<Tags tags={product.data.tags}/>

							 <p class="card__description mt-2 unselectable">
								{product.data.description}
							 </p>
							 
							 <a href={'/products/' + product.slug} class="card__button rounded-full unselectable">
									اطلاعات بیشتر
							 </a>
						</div>
						
				 </article>
				))}

				{productOrange.map(product => (
					<article class="card__article card__orange">
